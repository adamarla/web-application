
- columns = { :board => :regular, :subject => :regular, :grade_9 => :narrow,
              :grade_10 => :narrow, :grade_11 => :narrow, :grade_12 => :narrow}

#boards-summary.summary-table.left
  .table 
    .headings 
      .row 
        - columns.each do |title, width| 
          .cell{ :class => "#{width.to_s}" }= "#{title.to_s.humanize}"
    .data.clear-before-show.empty-on-putback 

