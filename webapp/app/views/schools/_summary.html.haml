
- columns = { :notitle => :radio, :school => :regular, :address => :wide, :zip_code => :narrow, 
              :phone => :narrow, :email => :regular}

#schools-summary.left
  .table 
    .headings 
      .row 
        - columns.each do |title, width| 
          - if title != :notitle 
            .cell{ :class => "#{width.to_s}" }= "#{title.to_s.humanize}"
          - else 
            .cell{ :class => "#{width.to_s}" }= " "
    .data 

