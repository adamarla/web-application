
-# Left-side tabs - one per section
#sektions-tab.tabbable.tabs-left
  %ul.nav.nav-tabs.span3{ :id => 'wsb-ul-milestone-2' }
    - teacher.sektions.each do |m|
      %li
        = simple_link :for => "#{m.label}", :toggle => :tab, :marker => "#{m.id}",
        :href => "#wsb-sektions", :url => "sektion/students.json?id=#{m.id}"

  -# List of students - by sektion - shown in a sektion-specific tab and wrapped in a <form>
  .tab-content.span8{ :id => 'wsb-div-milestone-3' }
    = simple_form_for :checked, :remote => true, 
    :html => { :class => 'multi-select', 'data-action' => "#{quiz_assign_path}?id=:id", 'data-id' => 'tab-wsb-quizzes'} do |f|
      .btn-toolbar.purge-skip
        .btn-group
          = simple_button :icon => 'icon-align-justify', :id => 'select-all-for-quiz',
            :tooltip => "Select All", :placement => :right
          = simple_button :icon => 'icon-envelope', :id => 'btn-publish-ws', :toggle => :button,
            :tooltip => "Send PDFs to students", :class => 'btn-primary', :placement => :right
        .btn-group
          = simple_button :icon => 'icon-wrench', :id => 'build-worksheet', :for => "Make PDF"
      #wsb-sektions.tab-pane.multi-select

