
- teacher = current_account.loggable
- server = "#{Gutenberg['server']}"

%ul.no-bullets
  = main_link :for => 'quizzes', :default => true
  = main_link :for => 'yardsticks', :as => 'scoring scheme' 
  = main_link :for => 'report-cards', :as => 'report cards', :with => { :panels => {:wide => "#flot-chart" } }
  = main_link :for => :account, :as => 'account'
  = main_link :for => 'suggestion', :as => 'suggestion form', 
              :href => "#{server}/front-desk/suggestion-forms/#{teacher.id}-#{teacher.first_name}.pdf"
  = main_link :for => :logout, :href => "/logout", :dynamic => false
