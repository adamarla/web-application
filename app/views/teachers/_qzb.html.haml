-# Variable teacher comes from the layout file 

%ul.nav.nav-tabs
  %li
    = simple_link :for => "Course", :href => '#pane-qzb-courses', :id => 'tab-qzb-courses'
  %li
    = simple_link :for => "Topics", :href => '#pane-qzb-topics', :id => 'tab-qzb-topics'
  %li
    = simple_link :for => "Questions", :href => '#pane-qzb-questions', :id => 'tab-qzb-questions'


.tab-content
  #pane-qzb-courses.tab-pane
  #pane-qzb-topics.tab-pane
    = render :partial => 'teachers/qzb-topics', :locals => { :teacher => teacher }
  #pane-qzb-questions.tab-pane
    = simple_form_for :checked, :remote => true, 
      :html => { :id => 'form-qzb', :class => 'no-remove', 
      'data-action' => "#{teacher_build_quiz_path}?id=:id", 'data-id' => 'tab-qzb-courses' } do |f|

      .row-fluid.navbar.no-touch
        .input-append.pull-right.span10
          = f.input_field :name, :class => "span8", :placeholder => "Name the Quiz"
          %button.btn.btn-inverse{ :type => :submit }= "Build Quiz"
      #qzb-questions.purge.no-remove

    
