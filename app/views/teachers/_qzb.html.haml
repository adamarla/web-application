%ul.nav.nav-tabs
  %li
    = simple_link :for => "Course", :href => '#pane-qzb-courses', 
      :id => 'tab-qzb-courses', :class => 'nopurge-ever'
  %li
    = simple_link :for => "Topics", :href => '#pane-qzb-topics', 
      :id => 'tab-qzb-topics', :class => 'nopurge-on-inactive nopurge-on-show'
  %li
    = simple_link :for => "Questions", :href => '#pane-qzb-questions', 
      :id => 'tab-qzb-questions'


.tab-content
  #pane-qzb-courses.tab-pane
