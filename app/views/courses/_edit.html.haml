
#edit-course.update-entity.close-on-submit
  = semantic_form_for :course, :remote => true do |f| 
    = f.inputs do 
      = f.input :name, :input_html => { :marker => :name } 
      = f.input :board_id, :label => 'Board', :as => :select, 
                :collection => Board.all, :include_blank => false,
                :input_html => { :marker => :board_id }
      = f.input :subject_id, :label => 'Subject', :as => :select, 
                :collection => Subject.all, :include_blank => false,
                :input_html => { :marker => :subject_id }
      = f.input :klass, :label => 'Class', :as => :select, 
                :collection => [*9..12], :include_blank => false,
                :input_html => { :marker => :klass }

    .submit-buttons
      %input{:type => :submit, :role => :button, :value => "Update", :name => "commit"}
