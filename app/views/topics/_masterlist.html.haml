
#topic-masterlist.hidden
  - list = get_list_of :verticals
  - list.each do |vertical|
    %div.hidden{ :marker => "#{vertical.id}" }
      - micros = Topic.where(:vertical_id => vertical.id).order(:name)
      - micros.each do |micro|
        = render :partial => 'toolbox/swiss_knife', 
                 :locals => { :marker => "#{micro.id}", :label => "#{micro.name}" }

