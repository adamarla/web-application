
#register_student.modal.hide.fade

  .modal-header
    %h3= "Hi, Thank you for taking the time to register!"
  .modal-body
    #formblurb.form-horizontal
      %h4= "Fill out this form and we'll get you started..."
      %br
      %form{ :id => "studentform",  :action => "welcome/register_student", :method => :post, "data-remote" => "true" } 
        .control-group
          .control-label{ :for => "studentform[name]" }= "Name"
          .controls 
            %input.input-long.required{ :type => :text, :id => "studentform[name]" , :name => "studentform[name]", :placeholder => "First and Last Name"}
        .control-group
          .control-label{ :for => "studentform[email]" }= "Email"
          .controls 
            %input.input-long.required.email{ :type => :email, :id => "studentform[email]", :name => "studentform[email]", :placeholder => "you@email.com"}
        .control-group
          .control-label{ :for => "studentform[gradelevel]" }= "Grade Level (9 - 12)"
          .controls 
            %input.input-long{ :type => :text, :id => "studentform[gradelevel]" , :name => "studentform[gradelevel]", :placeholder => "10"}
        .control-group
          .control-label{ :for => "studentform[password]" }= "Password"
          .controls 
            %input.input-long{ :type => :password, :id => "studentform[password]" , :name => "studentform[password]", :placeholder => "******"}
        .control-group
          .control-label{ :for => "studentform[country]" }= "Country"
          .controls 
            %input.input-long{ :type => :text, :id => "studentform[country]" , :name => "studentform[country]", :placeholder => "India"}
        .control-group
          .controls
            %button.btn.btn-primary.submit{ :id => "yesbtn", :type => :submit }= "Register!"
            %button.btn.btn-info{ :id => "nobtn", :type => :reset }= "Not now!"

    #ackblurb{ :style => "display: none" }
      %h4= "You are all set! Check your email for login information"
      %button.btn.btn-primary.pull-right{ :id => "dismissbtn" }= "Dismiss"
    #errblurb{ :style => "display: none" }
      %h4= "Sorry you need to enter all the fields!"

