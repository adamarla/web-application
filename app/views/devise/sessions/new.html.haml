
#sign-in-form
  = semantic_form_for :account, :url => session_path(:account) do |f|
    = f.inputs do
      = f.input :login, :wrapper_html => { :class => :left }
      = f.input :password, :as => :password, :wrapper_html => { :class => :left }
      = submit_tag 'login', :class => 'orange-submit-btn'
  -#recover-password
    - if devise_mapping.recoverable? && controller_name != 'passwords'
      = link_to 'Forgot your password?', new_password_path(:account)

