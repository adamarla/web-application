%html{html_attrs}
  %head 
    %title= "Grades will happen ..."
    = stylesheet_link_tag "application" 
    = javascript_include_tag "application", "welcome"
    = csrf_meta_tag
  %body 
    #viewport
      #company-logo
        = image_tag("gradians-small-blue.png", alt: "gradians", id: "gradians_logo")
      #public-links
        %ul.no-bullets      
          = main_link :for => :main, :as => 'home', :href => '#'
          = main_link :for => :videos, :as => 'video tutorials', :href => '#'
          = main_link :for => :how_it_works, :as => 'how it works', :href => '#'
          = main_link :for => :download, :as => 'download', :href => '#'
          = main_link :for => :about_us, :as => 'about us', :href => '#'
      #mainstage
        = yield :sign_in_form
        = yield :how_it_works
        = yield :download
        = yield :about_us
    = yield :footer
