    = javascript_include_tag "application", "teachers"
    = stylesheet_link_tag "application" 
    = csrf_meta_tag

  %body 

    .container-fluid 
      #control-panel.g-panel.row-fluid{ :marker => "#{tchr.id}" } 
        .span12
          .navbar.navbar-inverse
            .navbar-inner
              %a.brand.span4{ :href => "#"}= "Gradians.com"
              %ul.nav.span8.pull-right
                -# dropdown -> Quiz -> [ new, edit, save ]
                %li.dropdown
                  %a.dropdown-toggle{ :href => "#", "data-toggle" => :dropdown,
                  :task_list => '#teacher-quiz' }
                    Quizzes & Questions
                    %span.caret
                %li.dropdown
                  %a.dropdown-toggle{ :href => "#", "data-toggle" => :dropdown }
                    Report Cards
                    %b.caret
                -# Central place for editing user login details 
                %li#cp-account-link.dropdown.pull-right
                  %a.dropdown-toggle#account-ops{ :href => '#', 'data-toggle' => :dropdown, 
                  :task_list => '#tasks-on-account' }
                    Hello, #{tchr.first_name}
                    %span.caret
      #desktop.row-fluid
        #lp.g-panel.span4
          #lp-quiz-lst
          #lp-sektion-lst
          #lp-student-lst
        #wp.g-panel.span8
          #wp-preview

    = yield :toolbox
