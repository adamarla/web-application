
-# Customized markers 
- tchr = current_account.loggable
- srvr = "#{Gutenberg['server']}"

-content_for :toolbox do
  #toolbox.hidden 
    = render :partial => 'teachers/disputed'
    = render :partial => 'teachers/reportcards'
    = render :partial => 'teachers/sektions'

    = render :partial => 'toolbox/line'
    = render :partial => 'toolbox/preview'
    = render :partial => 'menus/teacher/quiz_filter'
    = render :partial => 'menus/teacher/per-quiz'
    = render :partial => 'menus/teacher/per-ws'
    = render :partial => 'menus/teacher/quiz_main', :locals => { :teacher => tchr, :server => srvr }
    = render :partial => 'menus/user/account'


!!!5

%html{html_attrs}
  %head 
    = javascript_include_tag "application", "teachers"
    = stylesheet_link_tag "application" 
    = csrf_meta_tag

  %body 

    .container-fluid 
      #control-panel.g-panel.row-fluid{ :marker => "#{tchr.id}" } 
        .span12
          .navbar.navbar-inverse
            .navbar-inner
              %a.brand.span4{ :href => "#"}= "Gradians.com"
              %ul.nav.span8.pull-right
                -# dropdown -> Quiz -> [ new, edit, save ]
                %li.dropdown
                  = simple_link :for => "Quizzes & Questions", :as => :dropdown, :id => 'm-teacher-quizzes'
                %li.dropdown
                  %a.dropdown-toggle{ :href => "#", "data-toggle" => :dropdown }
                    Report Cards
                    %b.caret
                -# Central place for editing user login details 
                %li#cp-account-link.dropdown.pull-right
                  = simple_link :for => "Hello, #{tchr.first_name}", :as => :dropdown, :id => 'm-account'
      #desktop.row-fluid
        #left.g-panel.span4
          = render :partial => 'toolbox/paginator', :locals => { :id => 'left-paginator', :url => '#' }
          #left-1
            = render :partial => 'teachers/wsb', :locals => { :teacher => tchr }
          #left-X
          #left-2
            = render :partial => 'teachers/qzb', :locals => { :teacher => tchr }
          #left-3
            = render :partial => 'teachers/wsl'
        #middle.g-panel.span4
          = render :partial => 'toolbox/paginator', :locals => { :id => 'middle-paginator', :url => '#' }
          #middle-X
        #right.g-panel.span4
          = render :partial => 'toolbox/paginator', :locals => { :id => 'right-paginator', :url => '#' }
          #right-X
        #wide.g-panel.span8
          #wide-X
          #wide-wait
            = render :partial => 'toolbox/wait'

    = yield :toolbox
