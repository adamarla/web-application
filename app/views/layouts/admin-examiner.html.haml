
-# Customized markers 
- user = current_account.loggable
- is_admin = current_account.role == :admin
- srvr = "#{Gutenberg['server']}"

- content_for :toolbox do 
  #toolbox.hidden 
    - if is_admin
      = render :partial => 'courses/new'
      = render :partial => 'courses/edit'
      = render :partial => 'topics/new'
      = render :partial => 'verticals/new'
      = render :partial => 'teachers/new'
      = render :partial => 'teachers/specialization'
      = render :partial => 'students/new'
      = render :partial => 'examiners/new'
      = render :partial => 'admin/upload_xls'
      = render :partial => 'courses/summary'
      = render :partial => 'syllabi/edit'
      = render :partial => 'examiners/list'
      = render :partial => 'teachers/list'
      = render :partial => 'boards/controls'
      = render :partial => 'topics/controls'

    = render :partial => 'examiners/blockDbSlots'
    = render :partial => 'toolbox/line'
    = render :partial => 'toolbox/preview'
    = render :partial => 'menus/user/account'
    = render :partial => 'menus/admin/workbench', :locals => { :is_admin => is_admin }
    = render :partial => 'menus/user/notifications'
    = render :partial => 'examiners/annotation-marks'
    = render :partial => 'menus/examiner/blockdb'

  
- content_for :modals do
  = render :partial => 'modals/user/account'

!!!5

%html{html_attrs}
  %head 
    = javascript_include_tag "application", "admin"
    -#= javascript_include_tag "https://c328740.ssl.cf1.rackcdn.com/mathjax/latest/MathJax.js?config=TeX-AMS_HTML"
    = javascript_include_tag "http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS_HTML"
    -#= javascript_include_tag "MathJax/MathJax.js?config=TeX-AMS_HTML"
    = stylesheet_link_tag "application" 
    = csrf_meta_tag

  %body 
    #spinner.spinner
      = image_tag "loading.gif", :id => 'img-spinner'
    .container-fluid 
      #control-panel.g-panel.row-fluid{ :marker => "#{user.id}" } 
        .span12
          .navbar.navbar-inverse
            .navbar-inner
              %a.brand.span3{ :href => "#"}
                = image_tag "logo-mit-beta-2.png"
                .tagline.span10.offset1= "Grades will happen"
              %ul.nav.span8
                %li.dropdown
                  = simple_link :for => "Workbench", :as => :dropdown, :id => 'm-admin-wb'
                %li.dropdown
                  = simple_link :as => :dropdown, 
                    :id => 'm-notifications', :icon => "icon-white icon-bell"
                %li#cp-account-link.dropdown
                  = simple_link :for => "Hello, #{user.first_name}", :as => :dropdown, :id => 'm-account'
      #desktop.row-fluid
        #left.g-panel.span4
          = render :partial => 'toolbox/paginator', :locals => { :id => 'left-paginator', :url => '#' }

          - if is_admin
            #left-1
              #schools.content.no-remove
            #left-X
            #left-2

          #left-3
            = render :partial => 'examiners/tag-pending'
          #left-4
            = render :partial => 'toolbox/grd-pending'
          #left-5
            = render :partial => 'toolbox/typeset-pending'

        - if is_admin
          #middle.g-panel.span4
            = render :partial => 'toolbox/paginator', :locals => { :id => 'middle-paginator', :url => '#' }
            #middle-X
          #right.g-panel.span4
            = render :partial => 'toolbox/paginator', :locals => { :id => 'right-paginator', :url => '#' }
            #right-X

        #wide.g-panel.span8
          - if is_admin
            #wide-1
              = render :partial => 'admin/school-console'
          #wide-X
          #wide-wait
            = render :partial => 'toolbox/wait'
          #graph-paper
          #wide-grd-canvas
            .row-fluid
              = render :partial => 'toolbox/grd-toolbar'
            .row-fluid
              .span1
                = render :partial => 'toolbox/grd-toolbar-btns'
              .span11
                %canvas#grading-canvas{ :width => 600, :height => 800 }
    = yield :toolbox
    = yield :modals
