
-# Customized markers 
- tc = current_account.loggable
- server = "#{Gutenberg['server']}"

- for j in [:toolbox, :menus, :modals, :notifications]
  - content_for j do 
    - klass = (j == :toolbox) ? 'hidden' : ''
    -  m = (j == :toolbox) ? ['generic', 'preview'].map{ |a| "toolbox/#{a}" } : ['shared', 'uni'].map{ |a| "#{j}/teacher/#{a}" }
    - partials_f = m.map{ |b| "app/views/#{b}" }
    %div{ id: j, class: klass }
      - for f in partials_f
        - Dir["#{f}/*.haml"].each do |p| 
          = render file: Rails.root.join(p), locals: { teacher: tc, server: server }
      -# render exceptions here 
      - if j == :menus 
        = render partial: 'menus/user/account'
      - if j == :toolbox
        = render partial: 'toolbox/grading/fdb-panel'
      
