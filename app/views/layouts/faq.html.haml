
!!!5

%html{html_attrs}
  %head 
    %title= "Gradians.com - FAQs"
    = stylesheet_link_tag "application" 
  %body 
    .container-fluid 
      .g-panel.row-fluid
        .span12
          .navbar.navbar-inverse
            .navbar-inner
              %a.brand.span4{ :href => "#"}
                = image_tag "logo-mit-beta-2.png"
      .row-fluid
        .span3{ :id => 'faq-side-panel' }
          .heading= "Questions everyone asks"
          %ul.nav.nav-list.offset1
            %li
              = simple_link :for => "What is a Quiz?", :href => '#faq-terminology'
            %li
              = simple_link :for => "What is a Worksheet?", :href => '#faq-terminology'
            %li
              = simple_link :for => "What is a Group?", :href => '#faq-terminology'
              
          -# Teachers 
          .heading= "Questions teachers ask"
          %ul.nav.nav-list.offset1
            %li
              = simple_link :for => "Questions on grading", :href => '#faq-grading'
            %li
              = simple_link :for => "Questions on scanning", :href => '#faq-scanning'

          -# General 
        .span7.offset3{ :id => 'faq-content-panel' }
          = render :partial => 'faq/teachers/grading'
          = render :partial => 'faq/teachers/scanning'
          = render :partial => 'faq/terminology'
