
#micro-topic-list
  - list = get_list_of :macro_topics
  - list.each do |macro|
    %div.hidden{ :marker => "#{macro.id}", 'back-to' => '#micro-topic-list' }
      - micros = MicroTopic.where(:macro_topic_id => macro.id).order(:name)
      - micros.each do |micro|
        = render :partial => 'toolbox/swiss_knife', 
                 :locals => { :marker => "#{micro.id}", :label => "#{micro.name}" }
