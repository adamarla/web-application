
#new-student.clear-after-submit
  %legend
    %span.target= "Student"
    %span.operation= "Quick Add"
  = semantic_form_for :student, :remote => true, :url => '#' do |f| 
    .submit-buttons
      = submit_tag 'add students'

    = f.inputs do 
      = f.input :sektion, :label => 'section', :as => :select, :collection => [],
                          :input_html => { :name => "sektion" }
      - [*1..5].each do |i|
        = f.input :name, :input_html => {:name => "names[#{i}]", :id => "student_#{i}"}, 
                         :label => "student ##{i}"
